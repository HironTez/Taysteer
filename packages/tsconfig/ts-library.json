{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ts-lib",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "ESNext",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
